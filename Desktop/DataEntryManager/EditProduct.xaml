<Window x:Class="DataEntryManager.EditProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditProduct" Height="193" Width="220">
    <Grid>
        <Button Content="Update" Name="buttonProductEdit" Margin="48,92,47,0" VerticalAlignment="Top" Height="56" Click="buttonProductEdit_Click"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" />
        <TextBox Name="name"  HorizontalAlignment="Left" Height="23" Margin="75,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Barcode" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="barcode"  HorizontalAlignment="Left" Height="23" Margin="75,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Price" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="price"  HorizontalAlignment="Left" Height="23" Margin="75,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
