<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hci.smarthypermarket"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="18" />

    <uses-permission
        android:name="android.permission.INTERNET"
        android:maxSdkVersion="19" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hci.smarthypermarket.views.LauncherActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hci.smarthypermarket.views.ProductActivity"
            android:label="@string/title_activity_product" >
        </activity>
        <activity android:name="com.hci.smarthypermarket.views.BarCodeActivity" >
        </activity>
        <activity android:name="com.hci.smarthypermarket.views.CartActivity" >
        </activity>
        <activity
        	android:name="com.hci.smarthypermarket.views.DashBoardActivity"
            android:label="@string/title_activity_dash_board" >
        </activity>
        <activity
            android:name="com.hci.smarthypermarket.views.OrderActivity"
            android:label="@string/title_activity_order" >
        </activity>
        <activity
            android:name="com.hci.smarthypermarket.views.BrowseActivity"
            android:label="@string/title_activity_browse" >
        </activity>
        <activity
            android:name="com.hci.smarthypermarket.views.ReviewsActivity"
            android:label="@string/title_activity_reviews" >
        </activity>
    </application>

</manifest>
